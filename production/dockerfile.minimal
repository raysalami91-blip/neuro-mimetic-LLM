# Dockerfile.minimal
FROM python:3.9-slim

WORKDIR /app

# Minimal dependencies
RUN pip install torch==2.0.0 --index-url https://download.pytorch.org/whl/cpu
RUN pip install fastapi uvicorn transformers

# Copy only essential files
COPY api/server.py /app/
COPY models/minimal_neuromimetic.py /app/models/
COPY tokenizer/minimal_arabic.py /app/tokenizer/
COPY checkpoints/minimal.pth /app/checkpoints/

EXPOSE 8000

CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "8000"]